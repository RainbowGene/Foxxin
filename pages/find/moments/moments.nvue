						icon: 'none'
					});
				})
			},
			// å‘é€è¯„è®º
			send() {
				let item = this.list[this.commentIndex]
				$H.post('/moment/comment', {
					id: item.moment_id,
					content: this.content,
					reply_id: this.reply_user ? this.reply_user.id : 0
				}).then(res => {
					item.comments.push({
						content: this.content,
						user: {
							id: this.user.id,
							name: this.user.nickname || this.user.username
						},
