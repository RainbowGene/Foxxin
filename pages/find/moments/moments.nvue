		</free-popup>

		<!-- ä¸Šæ‹‰åŠ è½½ -->
		<view v-if="list.length>=10" class="flex-row align-center justify-center py-3 bg-light">
			<text class="text-light-muted font">{{loadmore}}</text>
		</view>
